<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.khudrosoft.vision.activity.ProfileActivity"
    tools:showIn="@layout/activity_profile">

    <RelativeLayout
        android:id="@+id/topPanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profilePicture"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/margin_6dp"
            android:src="@drawable/no_picture_man" />


        <TextView
            android:id="@+id/user_Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profilePicture"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/margin_8dp"
            android:layout_marginBottom="@dimen/margin_8dp"
            android:text="Name"
            android:textColor="@color/app_white"
            android:textSize="22sp" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/buttonPanel"
        android:layout_below="@+id/topPanel"
        android:fadeScrollbars="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/buttonPanel"
            android:layout_below="@+id/topPanel"
            android:background="@color/app_white"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/letop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtUserId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="@dimen/margin_4dp"
                    android:text="User Id"
                    android:textColor="@color/app_gray" />

                <EditText
                    android:id="@+id/edtUserId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_4dp"
                    android:background="@drawable/round_edit_box"
                    android:gravity="top|left"
                    android:inputType="none"
                    android:padding="@dimen/margin_8dp"
                    android:singleLine="true" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/app_gray">

            </LinearLayout>

            <LinearLayout
                android:id="@+id/lecode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtPsoFffd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="@dimen/margin_4dp"
                    android:text="PSO FFC"
                    android:textColor="@color/app_gray" />

                <EditText
                    android:id="@+id/edtEmployeeCode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_4dp"
                    android:background="@drawable/round_edit_box"
                    android:gravity="top|left"
                    android:inputType="none"
                    android:padding="@dimen/margin_8dp"
                    android:singleLine="true" />

            </LinearLayout>

<LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/app_gray">

            </LinearLayout>

            <LinearLayout
                android:id="@+id/lecode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtPsoRfId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="@dimen/margin_4dp"
                    android:text="PSO RF Code"
                    android:textColor="@color/app_gray" />

                <EditText
                    android:id="@+id/edtRfId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_4dp"
                    android:background="@drawable/round_edit_box"
                    android:gravity="top|left"
                    android:inputType="none"
                    android:padding="@dimen/margin_8dp"
                    android:singleLine="true" />

            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/app_gray">

            </LinearLayout>
			
			


            <LinearLayout
                android:id="@+id/epl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtEmployeeName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="@dimen/margin_4dp"
                    android:gravity="left"
                    android:text="Name"
                    android:textColor="@color/app_gray" />

                <EditText
                    android:id="@+id/edtName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_4dp"
                    android:background="@drawable/round_edit_box"
                    android:gravity="top|left"
                    android:inputType="none"
                    android:padding="@dimen/margin_8dp"
                    android:singleLine="true" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/app_gray">

            </LinearLayout>

            <LinearLayout
                android:id="@+id/eplEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtEmployeeEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="@dimen/margin_4dp"
                    android:gravity="left"
                    android:text="Email"
                    android:textColor="@color/app_gray" />

                <EditText
                    android:id="@+id/edtEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_4dp"
                    android:background="@drawable/round_edit_box"
                    android:gravity="top|left"
                    android:padding="@dimen/margin_8dp"
                    android:singleLine="true" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/app_gray">

            </LinearLayout>

            <LinearLayout
                android:id="@+id/eplMobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtEmployeeMobile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="@dimen/margin_4dp"
                    android:gravity="left"
                    android:text="Mobile"
                    android:textColor="@color/app_gray" />

                <EditText
                    android:id="@+id/edtMobile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_4dp"
                    android:background="@drawable/round_edit_box"
                    android:gravity="top|left"
                    android:padding="@dimen/margin_8dp"
                    android:singleLine="true" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/app_gray">

            </LinearLayout>
			
			
			<LinearLayout
                android:id="@+id/eplDipo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtEmployeeDipo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="@dimen/margin_4dp"
                    android:gravity="left"
                    android:text="Dipo"
                    android:textColor="@color/app_gray" />

                <EditText
                    android:id="@+id/edtDipoId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_4dp"
                    android:background="@drawable/round_edit_box"
                    android:gravity="top|left"
                    android:padding="@dimen/margin_8dp"
                    android:singleLine="true" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>


    <LinearLayout
        android:id="@+id/buttonPanel"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/margin_8dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_update"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/app_red"
            android:layout_gravity="center_vertical"
            android:src="@drawable/btn_campaign"
            android:text="Update"
            android:textColor="@color/app_white" />

    </LinearLayout>
</RelativeLayout>